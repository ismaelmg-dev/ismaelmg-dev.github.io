---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../icons/Social/Linkedin.astro'
import Github from '../icons/Social/Github.astro'
import Social_icons from '../components/Social_icons.astro'
import Gmail from '../icons/Social/Gmail.astro'
import Section from '../components/Section.astro';
import Section_tecno from '../components/Section_tecno.astro';
import Tecnologias from '../components/Tecnologias.astro';
import Code from '../icons/Titulos/Code.astro'
import Proyectos from '../components/Proyectos.astro'
import Certificados from '../components/Certificados.astro'
import Sobre_mi from '../components/Sobre_mi.astro'
import Cert_icon from '../icons/Titulos/Cert_icon.astro'
import Me_icons from '../icons/Titulos/Me_icon.astro'
import Section_sobremi from '../components/Section_sobremi.astro'
import Footer from '../components/Footer.astro'
import Discord from '../icons/Social/Discord.astro'
import Section_certificados from '../components/Section_certificados.astro';
---

<Layout title="Portfolio Ismael Mañas"
description="Desarrollador web, centrado en seguir creciendo como programador, siempre abierto a nuevas oportunidades de aprendizaje y desarrollo profesional.">
	<main class="px-4">
		<Section>
			<img class="rounded-full w-20 h-20 mb-4" 
			src="https://avatars.githubusercontent.com/u/214477740?v=4"
			/> 
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-5 pb-6 lg:pb-10">
			Ismael Mañas 
			<a href="https://www.linkedin.com/in/developer-ismaelmg" target="_blank" rel="noopener"> <div class="flex justify-center items-center hover:scale-110 transition">
				<Badge> Open To Work </Badge>
			</div><a/></h1>
		<h2 class="text-xl lg:text-2xl opacity-80 text-pretty max-w-{700px}">
			<span class="text-blue-300">Desarrollador Backend.</span> <br>Desarrollador web, formado también como diseñador gráfico especializado en publicidad.
			He trabajado en proyectos de sitios web y aplicaciones, principalmente en la parte de backend.
			Actualmente centrado en seguir creciendo como desarrollador, siempre abierto a nuevas oportunidades de aprendizaje y desarrollo profesional.
		</h2>
		<nav class="flex gap-x-5 mt-6 flex-wrap">
			<Social_icons href="https://www.linkedin.com/in/developer-ismaelmg">
				<Linkedin class="size-4 md:size-6"/>
				LinkedIn
			</Social_icons>
			<Social_icons href="https://github.com/ismaelmg-dev">
				<Github class="size-4 md:size-6"/>
				GitHub
			</Social_icons>
			<Social_icons href="mailto:developer@ismaelmg.net">
				<Gmail class="size-4 md:size-6"/>
				developer@ismaelmg.net
			</Social_icons>
		</nav>
		</Section>
		<Section_tecno id="tecnologias">
			<Tecnologias/>
		</Section_tecno>
		<Section id="proyectos">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Code class="size-8 "/>Proyectos </h2>
			</div>
			<Proyectos/>
		</Section>
		<Section_certificados id="certificados">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Cert_icon class="size-8 "/>Certificados </h2>
			</div>
			<Certificados/>
		</Section_certificados>
		<Section_sobremi id="sobre_mi">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Me_icons class="size-8 "/>Sobre mí </h2>
			</div>
			<Sobre_mi/>
		</Section_sobremi>
		<Footer/>
	</main>
	
</Layout>
